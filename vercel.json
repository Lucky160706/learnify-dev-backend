{
    "version": 2,
    "crons": [
        {
            "path": "/cron/wake",
            "schedule": "0 0 * * *"
        }
    ],
    "builds": [
        {
            "src": "index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/cron/wake",
            "dest": "index.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "index.py"
        },
        {
            "src": "/(.*)",
            "dest": "index.py"
        }
    ]
}